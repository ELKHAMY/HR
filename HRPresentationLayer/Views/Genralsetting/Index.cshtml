@model Infrastructure.ViewModels.HoursweeklyholidaysViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>الاعدادات العامة</h1>
<div class="row">
    <div class="col-md-6">
        <form>
            <div style="border: 2px solid black; border-radius: 5px;">
                <h3 style="padding-right: 80px;">
                    الاضافات
                </h3>
            </div>
            <br />
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">الاضافة</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" disabled value="@Model.AddHours" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">الخصم</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" disabled value="@Model.RemoveHours" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form>
            <div style="border: 2px solid black; border-radius: 5px;">
                <h3 style="padding-right: 80px;">
                    الاجازات الاسبوعية
                </h3>
            </div>
            <br />
            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="Day1">اليوم الاول</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Day1" disabled>
                        <option value="@Model.Day1">@Model.Day1</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="Day2">اليوم الثاني</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Day2" disabled>
                        <option value="@Model.Day2">@Model.Day2</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>
<a class="btn btn-warning" asp-controller="Genralsetting" asp-action="Edit">تعديل</a>