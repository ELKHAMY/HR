@model List<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>الاقسام</h1>

<a asp-action="Add" asp-controller="Department" class="btn btn-success"> اضافة قسم  </a>

    <table class="table table-border table-hover">
        <tr>
            <th>الرقم</th>
            <th>اسم القسم</th>
            <th> تعديل  </th>
            <th>حذف</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            <td><a href="/Department/Edit/@item.Id">تعديل</a></td>
            <td><a href="/Department/Delete/@item.Id">حذف</a></td>
            </tr>
        }
    </table>




